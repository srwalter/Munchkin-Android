<resources>
	<style name="PowerText">
		<item name="android:textColor">#AAA</item>
		<item name="android:textSize">60dip</item>
		<item
			name="android:gravity">
			center_horizontal|center_vertical</item>
	</style>

	<style name="RollingText">
		<item name="android:textColor">#AAA</item>
                <item name="android:textSize">60dip</item>
                <item name="android:gravity">
                        center_horizontal|center_vertical</item>
	</style>
	<style name="DiceText">
		<item name="android:textColor">#AAA</item>
		<item name="android:textSize">120dip</item>
	</style>
	<style name="SecondaryText">
		<item name="android:textColor"> #AAA</item>
		<item name="android:textSize">10dip</item>
	</style>
	<style name="PrimaryText">
		<item name="android:textColor"> #FFF</item>
		<item name="android:textSize"> 20dip</item>
	</style>
	<style name="LevelText">
		<item name="android:textSize">150dip</item>
		<item name="android:gravity">
			center_horizontal|center_vertical </item>
	</style>
	<style name="Bottom">
		<item name="android:background">#000</item>
	</style>
	<style name="BottomLeft" parent="@style/Bottom">
		<item name="android:layout_marginRight">0.5dip</item>
		<item name="android:layout_marginLeft">1dip</item>
		<item name="android:layout_marginTop">1dip</item>
                <item name="android:layout_marginBottom">1dip</item>
	</style>
	<style name="BottomMiddle" parent="@style/Bottom">
		<item name="android:layout_marginLeft">0.5dip</item>
                <item name="android:layout_marginRight">0.5dip</item>
		<item name="android:layout_marginTop">1dip</item>
		<item name="android:layout_marginBottom">1dip</item>
	</style>
	<style name="BottomRight" parent="@style/Bottom">
                <item name="android:layout_marginLeft">0.5dip</item>
                <item name="android:layout_marginRight">1dip </item>
		<item name="android:layout_marginTop">1dip</item>
                <item name="android:layout_marginBottom">1dip</item>
        </style>
</resources>
