<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dialog_layout"
	android:orientation="vertical"
	android:padding="2dip"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Bonus Amount:" />
		<EditText
			android:id="@+id/gear_dialog_bonus_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:inputType="numberSigned" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
		android:orientation="horizontal">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:singleLine="false"
			android:text="Armor Type:" />
		<Spinner
			android:id="@+id/gear_dialog_armor_type"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:prompt="@string/armor_prompt" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
		android:orientation="horizontal">
		<Button
			android:id="@+id/gear_dialog_add_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Add"
			android:layout_weight="1" />
		<Button
			android:id="@+id/gear_dialog_cancel_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Cancel"
			android:layout_weight="1" />
	</LinearLayout>

</LinearLayout>
